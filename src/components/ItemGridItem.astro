---
interface Props {
    topic: string;
    title: string;
    subtitle: string;
    link?: string;
}
import "../styles/custom.css";

const {topic, title, subtitle, link} = Astro.props;
---

<li>
    <p>{topic}</p>
    <p>{title}</p>
    <p>{subtitle}</p>
</li>

<style>
    li {
        border: 2px solid var(--sl-color-accent);
        background-color: var(--sl-color-accent-low);
        border-radius: 1rem;
        padding: 1rem;
        margin: 0.375rem;
    }
</style>